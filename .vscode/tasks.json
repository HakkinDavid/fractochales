{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "(Windows) SFML Build",
            "command": "g++",
            "args": [
                "includes/Lightning/Lightning.cpp",
                "includes/Slider/slider.cpp",
                "includes/Button/button.cpp",
                "includes/Switch/switch.cpp",
                "includes/ThickLine/thickline.h",
                "main.cpp",
                "-Iincludes/",
                "-Iincludes/SFML",
                "-Iincludes/Lightning",
                "-Iincludes/Slider",
                "-Iincludes/Button",
                "-Iincludes/Switch",
                "-Iincludes/ThickLine",
                "icon.res",
                "-o",
                "${workspaceFolder}\\main.exe",
                "-DSFML_STATIC",
                "-L\"${workspaceFolder}\\lib\"",
                "-lsfml-graphics-s",
                "-lsfml-window-s",
                "-lsfml-audio-s",
                "-lsfml-system-s",
                "-lopengl32",
                "-lfreetype",
                "-lwinmm",
                "-lgdi32",
                "-lopenal32",
                "-lflac",
                "-lvorbisenc",
                "-lvorbisfile",
                "-lvorbis",
                "-logg",
                "-mwindows"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "(Windows) SFML Build"
        },
        {
            "label": "(Mac) SFML Build",
            "type": "cppbuild",
            "detail": "(Mac) SFML Build",
            "command": "g++",
            "args": [
                "-DSFML_STATIC",
                "-std=c++11",
                "-stdlib=libc++",
                "-o",
                "${workspaceFolder}/main",
                "includes/Lightning/Lightning.cpp",
                "includes/Slider/slider.cpp",
                "includes/Button/button.cpp",
                "includes/Switch/switch.cpp",
                "includes/ThickLine/thickline.h",
                "main.cpp",
                "-Iincludes/",
                "-Iincludes/SFML",
                "-Iincludes/Lightning",
                "-Iincludes/Slider",
                "-Iincludes/Button",
                "-Iincludes/Switch",
                "-Iincludes/ThickLine",
                "-F/Library/Frameworks",
                "-framework",
                "SFML",
                "-framework",
                "sfml-audio",
                "-framework",
                "sfml-graphics",
                "-framework",
                "sfml-window",
                "-framework",
                "sfml-system",
                "-framework",
                "FLAC",
                "-framework",
                "freetype",
                "-framework",
                "ogg",
                "-framework",
                "OpenAL",
                "-framework",
                "vorbis",
                "-framework",
                "vorbisenc",
                "-framework",
                "vorbisfile"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ],
    "version": "2.0.0"
}